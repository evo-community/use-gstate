{
  "name": "create-gstore",
  "version": "0.2.0",
  "description": "A lightweight, powerful state management library for React applications that allows you to create global state from React hooks",
  "type": "module",
  "private": false,
  "author": "Your Name",
  "license": "MIT",
  "keywords": [
    "react",
    "state-management",
    "hooks",
    "global-state",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/evo-community/create-gstore"
  },
  "homepage": "https://evo-community.github.io/use-gstate",
  "files": [
    "dist"
  ],
  "main": "./dist/lib.umd.cjs",
  "module": "./dist/lib.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/lib.js",
      "require": "./dist/lib.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite --port=4000",
    "build": "tsc -b && vite build",
    "build:docs": "vite build --config vite.config.docs.ts",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "check-types": "tsc --noEmit",
    "test": "vitest --watch=false",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "preview": "vite preview",
    "docs": "vite vite --port=4001 --config vite.config.docs.ts",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@tanstack/react-query": "^5.74.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "^22.14.1",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "3.1.2",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-prettier": "5.2.6",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.32",
    "prettier": "3.5.3",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.55.0",
    "react-router-dom": "^6.30.0",
    "react-syntax-highlighter": "^15.6.1",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "3.1.2"
  }
}
